{% extends "base.twig" %}
{% block content %}

	<div class="hero">
		<div class="hero__content">
			{% include 'hero-series.twig' %}
		</div>
		{% include '_partial-alert.twig' %}
	</div>

	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 vm-xs-bottom-1 text-xs-center">
					<h2>All Series</h2>
				</div>
			</div>
			<div class="row">
				{% if posts %}
					{% for post in posts %}
						<div class="col-sm-6 ">
						    <a href="{{ post.link }}">
						        <div class="message-card">
						            <div class="u-abs-full bg-img" style="background-image: url({{ post.get_field('series_artwork') }});"></div>
						            <div class="message-card__info">
						                <h4>{{ post.title }}</h3>
						                <p>Series</p>
						            </div>
						        </div>
						    </a>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</section>

{% endblock %}